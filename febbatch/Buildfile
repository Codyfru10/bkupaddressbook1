pipeline {
    agent any
    tools {
      maven "mymaven"
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Deploy') {
            steps {
                sshagent(['jentomcat']) {
   sh "scp -o StrictHostkeyChecking=no target/*.war ansadmin@54.87.179.1:/home/ansadmin/tomcat/webapps"
   }
            }
        }
    }
}
